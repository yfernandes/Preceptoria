{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"paths": {
			"@/*": ["./*"],
			"@elysia/*": ["../elysia/src/*"],
			"@elysia/types": ["../elysia/src/types"]
		},
		"strict": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"],
	"references": [{ "path": "../server" }]
}
