{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": false,
		"isolatedModules": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2022",
		"baseUrl": "../../../",
		"paths": {
			"@web/*": ["apps/web/src/*"],
			"@web/public/*": ["apps/web/public/*"],
			"@web/components": ["apps/web/src/components/index.ts"],
			"@web/layouts": ["apps/web/app/src/layouts/index.ts"],
			"@web/stores": ["apps/web/app/src/stores/index.ts"],
			"@web/libs": ["apps/web/app/src/libs/index.ts"],
			"@api": ["apps/api/src/index.ts"],
			"@api/*": ["apps/api/src/*"],
			"@api/db": ["apps/api/infrastructure/database/db"],
			"@api/infrastructure/*": ["apps/api/infrastructure/*"],
			"@lib/ui": ["packages/ui/src/index.ts"],
			"@lib/ui/*": ["packages/ui/src/*"],
			"@lib/ui/components/*": ["packages/ui/src/components/*"],
			"@lib/ui/lib/*": ["packages/ui/src/lib/*"],
			"@lib/ui/hooks/*": ["packages/ui/src/hooks/*"],
			"@lib/ui/styles/*": ["packages/ui/src/styles/*"],
			"@config/*": ["packages/config/*"]
		}
	},
	"exclude": ["coverage", ".storybook", "node_modules"]
}
