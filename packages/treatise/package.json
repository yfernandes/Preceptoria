{
	"name": "treatise",
	"module": "index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"dev": "bun run --watch src/index.ts",
		"typecheck": "tsc --noEmit",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.mjs --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"clean": "rm -rf dist coverage"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
